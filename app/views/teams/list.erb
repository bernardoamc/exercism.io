<div class="container">
  <h3>Search for public teams</h3>

  <div class="teams-search">
    <form accept-charset="UTF-8" action="<%= "/teams" %>" method="get">
      <div class="row">
        <div class="input-group col-md-12">
          <input type="text" name="q" value="<%= tag %>" class="form-control input-lg" placeholder="Search tags" data-search="tags"/>

          <span class="input-group-btn">
            <button class="btn btn-info btn-lg" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </span>
        </div>
      </div>
    </form>
  </div>

  <div>
    <ul class="teams-result-list">
      <% if tag.present? && teams.empty?%>
        <li class="team-info">
          <div class="row">
            <h3>No teams could be found!</h3>
          </div>
        </li>
      <% end %>

      <% teams.each do |team| %>
        <li class="team-info">
          <div class="row">
            <div class="list-group-item">
              <% if member_of.include?(team.id) %>
                <a href="/teams/<%= team.slug %>" class="btn btn-xs btn-primary">Member</a>
              <% elsif team_invites.include?(team.id) %>
                <form action="<%= "/teams/#{team.slug}/accept_invite" %>" method="post">
                  <input type="hidden" name="_method" value="put" />
                  <input type="submit" name="update" value="Accept invite" class="btn btn-xs btn-success"/>
                </form>
              <% elsif team_requests.include?(team.id) %>
                <span class="btn btn-xs btn-warning">Request pending</span>
              <% else %>
                <form action="<%= "/teams/#{team.slug}/request_membership" %>" method="post">
                  <input type="hidden" name="_method" value="put" />
                  <input type="submit" name="update" value="Request membership" class="btn btn-xs btn-success"/>
                </form>
              <% end %>

              <h3><%= h(team.name) %> (<%= team.members.size %> <%= 'member'.pluralize(team.members.size) %>)</h3>

              <% if team.description.present? %>
                <h4><%= team.description %></h4>
              <% end %>

              <p>
                Tags: <%= team.all_tags %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <% if teams.present? %>
    <div class="pagination">
      <%= will_paginate teams, renderer: BootstrapPagination::Sinatra %>
    </div>
  <% end %>
</div>
